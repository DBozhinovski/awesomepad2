@import 'nib'
@import 'swatches'

body {
  background: $base;
}

#layout {
  padding-left: 150px;
  left: 0px;
}

.sidebar {
  background: $secondary;
  margin-left: -150px;
  width: 150px;
  position: fixed;
  top: 0;
  left: 150px;
  bottom: 0;
  z-index: 1000;
  // overflow-y: auto;
  overflow: hidden;

  .pure-menu {
    background: inherit;
    color: #000;
    border: 0;
  }

  h1 {
    font-size: 15px;
    text-align: center;
    margin: 0;
    padding: 0;
  }
}
